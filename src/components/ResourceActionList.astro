---
/**
 * Renders a list of resource actions based on the provided props.
 * @component
 * @example
 * ```astro
 * <ResourceActionList res={resource} />
 * ```
 * This example renders a list of resource actions using the `res` prop.
 * @property {ExtendedResource} res - An object representing an extended resource.
 * @returns {astro.AstroNode} The rendered list of resource actions.
 */

import { type ExtendedResource } from '../config';

export interface Props {
	res: ExtendedResource;
}

const { res } = Astro.props satisfies Props;
---

<aside class="ResourceAside ResourceActions">
	<h5 class="WidgetTitle">Acțiuni disponibile:</h5>
	<ul class="InfoList">
		<li class="InfoItem" transition:name={`${res?.slug} action share`}>
			<button class="InfoLink" type="button" title="Share-uiește resursa: Resilient Web Design cu prietenii tăi">
				<span class="Icon IconShare">
					<span class="SROnly">🚀</span>
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M7.217 10.907a2.25 2.25 0 100 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186l9.566-5.314m-9.566 7.5l9.566 5.314m0 0a2.25 2.25 0 103.935 2.186 2.25 2.25 0 00-3.935-2.186zm0-12.814a2.25 2.25 0 103.933-2.185 2.25 2.25 0 00-3.933 2.185z"
						></path>
					</svg>
				</span>
				<span class="ButtonText">
					Trimite<span class="DesktopOnlyInline"> link-ul</span>
				</span>
			</button>
		</li>
		<li class="InfoItem" transition:name={`${res?.slug} action like`}>
			<button class="InfoLink" type="button" title="Adaugă în lista ta de resurse favorite resursa: Resilient Web Design">
				<span class="Icon IconLike">
					<span class="SROnly">❤️</span>
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M6.633 10.5c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 012.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 00.322-1.672V3a.75.75 0 01.75-.75A2.25 2.25 0 0116.5 4.5c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 01-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 00-1.423-.23H5.904M14.25 9h2.25M5.904 18.75c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 01-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 10.203 4.167 9.75 5 9.75h1.053c.472 0 .745.556.5.96a8.958 8.958 0 00-1.302 4.665c0 1.194.232 2.333.654 3.375z"
						></path>
					</svg>
				</span>
				<span class="ButtonText">
					Adaugă<span class="DesktopOnlyInline"> în listă</span>
				</span>
			</button>
		</li>
		<li class="InfoItem" transition:name={`${res?.slug} action report`}>
			<button class="InfoLink" type="button" title="Semnalează o problemă cu resursa: Resilient Web Design - link greșit, site hack-uit, proprietăți greșite">
				<span class="Icon IconReport">
					<span class="SROnly">⚠️</span>
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M3 3v1.5M3 21v-6m0 0l2.77-.693a9 9 0 016.208.682l.108.054a9 9 0 006.086.71l3.114-.732a48.524 48.524 0 01-.005-10.499l-3.11.732a9 9 0 01-6.085-.711l-.108-.054a9 9 0 00-6.208-.682L3 4.5M3 15V4.5"
						></path>
					</svg>
				</span>
				<span class="ButtonText">
					Raportează<span class="DesktopOnlyInline"> link</span>
				</span>
			</button>
		</li>
	</ul>
</aside>
