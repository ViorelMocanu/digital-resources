---
/**
 * Renders the website header and highlights the active page in the header main menu, if any.
 * @component
 * @example
 * ```astro
 * <Header activeMenu={myActiveMenu} />
 * ```
 * @property {Array} [breadcrumbArray] - An optional array of breadcrumb items.
 * @property {string} [activeMenu] - An optional string representing the active menu item.
 * @returns {astro.AstroNode} The header component.
 */

import { Taxonomy, db, eq } from 'astro:db';
import { type BreadcrumbItem } from '../config';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { highlightUrl } from '../utils/urlHelpers';
export interface Props {
	breadcrumbArray?: BreadcrumbItem[] | undefined;
	activeMenu?: string | undefined;
}

const { breadcrumbArray = [], activeMenu } = Astro.props satisfies Props;
const activePage = activeMenu || Astro.url.pathname.substring(1);

const allSectionsQuery = await db.select().from(Taxonomy).where(eq(Taxonomy.type, 1));
const sections = allSectionsQuery.map((section) => section);
---

<header class="Header" transition:name="Header">
	<div class="HeaderMain" role="toolbar">
		<button class="MenuTrigger" type="button" id="menuTrigger" aria-expanded="false" aria-label="Deschide meniul principal" aria-haspopup="true" aria-controls="menu">
			<span class="Icon IconHamburger">
				<span class="HamburgerBar HamburgerBar1">&nbsp;</span>
				<span class="HamburgerBar HamburgerBar2">&nbsp;</span>
				<span class="HamburgerBar HamburgerBar3">&nbsp;</span>
			</span>
			<span class="SROnly">Deschide meniul principal</span>
		</button>
		<a class="Logo" href="/" title="Mergi la prima paginÄƒ a proiectului Resurse.dev">
			<span class="LinkText">resurse.dev</span>
		</a>
		<a class:list={highlightUrl('login', 'HeaderLink Login', 'Active')} href="/login" title="Mergi la prima paginÄƒ a proiectului Resurse.dev">
			<span class="Icon IconUser">
				<span class="SROnly">ðŸ‘¤</span>
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z"
					></path>
				</svg>
			</span>
			<span class="LinkText">Login</span>
		</a>
		<nav class="MainMenu" id="menu" aria-labelledby="menuTrigger">
			<ul class="MainMenuList">
				{
					sections.map((section) => (
						<li class:list={highlightUrl(section.slug, 'MainMenuItem', 'Active', activePage)}>
							<a class="MainMenuLink" href={`/${section.slug}`} title={`Vezi exclusiv lista de ${section.title}`}>
								<span class="LinkText">{section.menu}</span>
							</a>
						</li>
					))
				}
			</ul>
			<form class="SearchForm Form" action="/cauta" method="get" role="search" aria-label="CautÄƒ pe tot site-ul">
				<fieldset class="Fieldset">
					<legend class="SROnly">CautÄƒ Ã®n Resurse.dev</legend>
					<label class="Label" id="searchLabel" for="s">Introdu cuvintele cÄƒutate:</label>
					<input
						type="search"
						class="Input InputSearch"
						id="s"
						name="s"
						maxlength="200"
						value=""
						placeholder="ðŸ” CautÄƒ resurse de orice fel..."
						spellcheck="false"
						autocorrect="off"
						results="10"
						aria-labelledby="searchLabel"
					/>
					<button type="submit" class="SROnly">CautÄƒ acum &raquo;</button>
				</fieldset>
			</form>
		</nav>
	</div>
	<Breadcrumbs breadcrumbArray={breadcrumbArray} />
</header>

<script>
	declare global {
		interface Window {
			menuListeners: any;
		}
	}
	window.menuListeners = function () {
		const menuTrigger = document.getElementById('menuTrigger');
		const body = document.body;

		// la fiecare click pe butonul cu hamburger icon, adÄƒugÄƒm sau scoatem (deci facem toggle pe) clasa ActiveMenu Ã®n body, clasÄƒ care are niÈ™te CSS care afiÈ™eazÄƒ sau ascunde meniul mobil
		menuTrigger?.addEventListener('click', function (event) {
			event.preventDefault();
			body.classList.toggle('ActiveMenu');
			if (body.classList.contains('ActiveMenu')) {
				document.body.dataset.menuOpen = 'true';
				// this are valoarea e.currentTarget adicÄƒ menuTrigger
				// https://developer.mozilla.org/en-US/docs/Web/API/EventTarget/addEventListener#the_value_of_this_within_the_handler
				this.setAttribute('aria-expanded', 'true');
				this.setAttribute('aria-label', 'ÃŽnchide meniul principal');
			} else {
				delete document.body.dataset.menuOpen;
				this.setAttribute('aria-expanded', 'false');
				this.setAttribute('aria-label', 'Deschide meniul principal');
			}
			return false;
		});
	};
	window.menuListeners();
	// Runs on view transitions navigation
	document.addEventListener('astro:after-swap', function () {
		window.menuListeners();
	});
</script>
