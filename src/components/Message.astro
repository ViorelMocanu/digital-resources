---
/**
 * Renders a message box with a title and body.
 * @component
 * @example
 * ```astro
 * <Message title="Hello" type="info">This is a message body.</Message>
 * ```
 * @property {string} [title] - The title of the message box.
 * @property {string} [type] - The type of the message box.
 * @returns {astro.AstroNode} The rendered message box.
 */

export interface Props {
	title?: string;
	type?: string;
}
const { title, type } = Astro.props satisfies Props;
---

<div class:list={['Message', `Message-${type}`]} role="alert">
	<h2 class="MessageTitle">{title}</h2>
	<div class="MessageBody">
		<slot />
	</div>
</div>
