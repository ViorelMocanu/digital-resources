---
const { template } = Astro.props;
import { getEntry } from 'astro:content';
let { slug } = Astro.params;
if (slug === undefined) {
  slug = Astro.url.pathname;
}

let level,
	section = {title: '', slug: ''},
	category = {title: '', slug: ''},
	resource = {title: '', slug: ''};
switch ( template ) {
	case 'ResourcePage':
		level = 3;
		section.title = "";
		section.slug = "/";
		category.title = "";
		category.slug = "/";
		resource.title = "";
		resource.slug = "/";
		break;
	case 'CategoryPage':
		level = 2;
		section.title = "";
		section.slug = "/";
		category.title = "";
		category.slug = "/";
		break;
	case 'SectionPage':
		level = 1;
		const currentSection = await getEntry('sections', slug);
		section.title = currentSection?.data.menu;
		section.slug = currentSection?.slug;
		break;
	default:
		level = 0;
}
