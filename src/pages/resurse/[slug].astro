// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
	return allResources?.map((entry) => ({
		params: { slug: entry.slug },
		props: { entry },
	}));
}

export type Props = InferGetStaticPropsType<typeof getStaticPaths>;

// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props satisfies Props;

let resourceTags = new Array();
let resourceType = 'generic';
if (entry.tags) {
	// @TODO
}

let breadcrumbArray: BreadcrumbItem[] = [];

const taxonomies = getTaxonomyParents(allTaxonomies, entry?.taxonomy?.id);
const section = taxonomies.pop();
const category = taxonomies.pop();
const subcategory = taxonomies.pop();

if (section) {
	breadcrumbArray.push({
		href: `/${section.slug}`,
		title: section.title,
		label: section.menu,
	});
}

if (section && category) {
	breadcrumbArray.push({
		href: `/${section.slug}/${category.slug}`,
		title: category.title,
		label: category.menu,
	});
}

if (section && category && subcategory) {
	breadcrumbArray.push({
		href: `/${section.slug}/${category.slug}/${subcategory.slug}`,
		title: subcategory.title,
		label: subcategory.menu,
	});
}

const isYouTubeVideo = entry.url.substring(0, 32) === 'https://www.youtube.com/watch?v=';
const videoId = entry.url ? new URL(entry.url).searchParams.get('v') : '';

const pageTitle = entry.title;
const pageDescription = entry.description || 'Resursă de pe Resurse.dev';
if (breadcrumbArray.length < 1) {
	breadcrumbArray.push({
		href: '/resurse',
		title: 'Toate resursele de pe Resurse.dev',
		label: 'Resurse',
	});
}

breadcrumbArray.push({
	href: Astro.url,
	title: entry.title,
	label: entry.title,
});
