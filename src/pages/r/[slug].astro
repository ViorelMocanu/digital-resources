/**
 * A function to dynamically import images based on their file extension.
 * @param {string|null} imageFileName - The name of the image file to import.
 * @returns {Promise<any>} The imported image.
 * @example
 * ```astro
 * <script>
 * 	import { dynamicViteAssetImport } from '@utils/dynamicViteAssetImport';
 * 	const image = dynamicViteAssetImport('test.jpg');
 * </script>
 * <img src={image.default} alt="Test image" />
 * ```
 * @see https://vitejs.dev/guide/features.html#glob-import
 * @see https://vitejs.dev/guide/features.html#import-meta-url
 */
function dynamicViteAssetImport(imageFileName: string | null): Promise<any> {
	if (!imageFileName || imageFileName.length <= 0 || imageFileName === null) return import(`/src/img/test.jpg`); // @TODO: change default image to something relevant
	const filename = path.parse(imageFileName);
	const name = filename.name;
	const ext = filename.ext;
	switch (ext) {
		case '.webp':
			return import(`/src/img/${name}.webp`);
		case '.jpg':
			return import(`/src/img/${name}.jpg`);
		case '.png':
			return import(`/src/img/${name}.png`);
		case '.svg':
			return import(`/src/img/${name}.svg`);
		case '.gif':
			return import(`/src/img/${name}.gif`);
		case '.avif':
			return import(`/src/img/${name}.avif`);
		case '.jpeg':
			return import(`/src/img/${name}.jpeg`);
		default:
			return import(`/src/img/${name}.jpg`);
	}
}

export async function getStaticPaths() {
	const allResourcesDetailed = await db
		.select()
		.from(Resource)
		.leftJoin(ResourceType, eq(Resource.resource_type_id, ResourceType.id))
		.leftJoin(Author, eq(Resource.author_id, Author.id));
	const allRatings = await db.select().from(Rating);
	const allResourceTags = await db.select().from(RelationResourceTag).leftJoin(Tag, eq(RelationResourceTag.tag_id, Tag.id)).leftJoin(TagType, eq(Tag.tag_type_id, TagType.id));
	return allResourcesDetailed.map(({ Resource, ResourceType, Author }) => {
		const filteredRatings = allRatings.filter((rating) => rating.resource_id === Resource.id);
		const totalRating = filteredRatings.reduce((acc, rating) => acc + rating.rating, 0);
		const averageRating = totalRating / filteredRatings.length;

		const filteredTags = allResourceTags.filter(({ RelationResourceTag }) => RelationResourceTag.resource_id === Resource.id);

		return {
			params: { lang: undefined, slug: Resource.slug },
			props: {
				...Resource,
				type: ResourceType?.title,
				authorName: Author?.name,
				authorUrl: Author?.url,
				aggregateRating: averageRating,
				ratingCount: filteredRatings.length,
				tags: { ...filteredTags },
			},
		};
	});
}

